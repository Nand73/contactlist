<html>
    <head>
        <title>
            <%=locals.title%>
        </title>
        <script src="https://kit.fontawesome.com/61d52ba2ba.js" crossorigin="anonymous"></script>
        <!--our css should be below all other style so that we can override it -->>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            My Contact List</h1>
        <div id="contact-list-container">
            <ul>
                <%for(i of contact_list){%>
                    <li class="contact">
                        <div class="details">
                       <p><%=i.name%></p> 
                       <p> <%=i.phone%></p>
                    </div> 
                    <div class="delete-button">
                        <a href="/delete-contact/?phone=<%=i.phone%>">
                            <i class="fas fa-window-close"></i>
                        </a>
                    </div>
                    </li>
                <%}%>
            </ul>
        </div>
        
        <form id="forms" action="/create_contact" method="POST" >
            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enter Phone" required>
            <button type="submit">Add Contact</button>
        </form>
  
         <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>